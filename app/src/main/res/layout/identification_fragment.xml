<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:clickable="true"
android:background="@color/backgorund_lyt_gray"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".ui.enrollment.identification.IdentificationFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgorund_lyt_gray"
        android:orientation="vertical"
        android:padding="@dimen/txt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="PROOF OF ADDRESS"
            android:textSize="@dimen/text_margin"
            android:layout_gravity="left"
            android:textColor="@color/dark" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="PROOF TYPE"
                android:textColor="@color/textview_grey"
                android:layout_gravity="left"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/enroll_round_background"
                android:orientation="horizontal"
                android:weightSum="10">

                <Spinner
                    android:id="@+id/idn_add_proof_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/big_margin"
                    android:layout_weight="10"
                    android:background="@color/transparent"
                    android:paddingLeft="@dimen/small_padding"
                    android:spinnerMode="dialog" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="IDENTIFICATION NUMBER"
                android:textColor="@color/textview_grey"
                android:layout_gravity="left"/>



            <EditText
                android:id="@+id/idn_add_proof_fld"
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_margin"
                android:background="@drawable/enroll_round_background"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="20"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/idn_identity_numb_fld"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ-0123456789"
                android:inputType="textCapCharacters"
                android:paddingLeft="@dimen/small_padding"
                android:textColor="@color/dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginTop="@dimen/small_padding"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/add_proof_attach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@color/backgorund_lyt_gray"
                    app:srcCompat="@drawable/ic_attach"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attachment"
                    android:textColor="@color/textview_grey"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_img_host"
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:visibility="gone"
                android:gravity="right"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="right"
                    android:id="@+id/idn_add_attched_img"
                    android:layout_width="@dimen/list_item_height"
                    android:layout_height="@dimen/list_item_height"
                    android:src="@drawable/promo_default" />

            </LinearLayout>

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="PROOF OF IDENTITY"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textSize="@dimen/text_margin"
            android:textColor="@color/dark" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="PROOF TYPE"
                android:textColor="@color/textview_grey"
                android:layout_gravity="left"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/enroll_round_background"
                android:orientation="horizontal"
                android:weightSum="10">

                <Spinner
                    android:id="@+id/idn_identity_proof_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/big_margin"
                    android:layout_weight="10"
                    android:background="@color/transparent"
                    android:paddingLeft="@dimen/small_padding"
                    android:spinnerMode="dialog" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="IDENTIFICATION NUMBER"
                android:textColor="@color/textview_grey"
                android:layout_gravity="left"/>



            <EditText
                android:id="@+id/idn_identity_numb_fld"
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_margin"
                android:background="@drawable/enroll_round_background"
                android:maxLines="1"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ-0123456789"
                android:inputType="textCapCharacters"
                android:maxLength="20"
                android:singleLine="true"
                android:paddingLeft="@dimen/small_padding"
                android:textColor="@color/dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/identity_proof_attach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@color/backgorund_lyt_gray"
                    app:srcCompat="@drawable/ic_attach"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attachment"
                    android:textColor="@color/textview_grey"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/idenity_img_host"
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:visibility="gone"
                android:gravity="right"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/idn_identity_attched_img"
                    android:layout_width="@dimen/list_item_height"
                    android:layout_height="@dimen/list_item_height"
                    android:layout_gravity="right"
                    android:src="@drawable/promo_default"/>

            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/identification_submit"
            android:layout_width="@dimen/big_image_height"
            android:layout_height="@dimen/noraml_btn_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/button_style"
            android:text="SUBMIT"
            android:textColor="@color/colorAccent" />



    </LinearLayout>

</ScrollView>

</FrameLayout>

