<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:visibility="visible"
    android:background="@color/colorAccent"
    android:id="@+id/add_dream_giftLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.enrollment.retailer_dreamgift.AddDreamGiftFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <include layout="@layout/member_list_row"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:weightSum="2">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textSize="16sp"
                android:text="Dream Gift : "
                android:textColor="@color/dark" />

            <EditText
                android:id="@+id/dream_gift_name_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/noraml_btn_height"
                android:layout_weight="1"
                android:textCursorDrawable="@null"
                android:background="@drawable/black_line_border"
                android:maxLines="1"
                android:padding="@dimen/small_padding"
                android:singleLine="true"
                android:textColor="@color/dark">

            </EditText>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:weightSum="2">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textSize="16sp"
                android:text="Points required : "
                android:textColor="@color/dark" />

            <EditText
                android:id="@+id/points_required_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/noraml_btn_height"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:inputType="number"
                android:textCursorDrawable="@null"
                android:background="@drawable/black_line_border"
                android:maxLines="1"
                android:padding="@dimen/small_padding"
                android:singleLine="true"
                android:textColor="@color/dark">

            </EditText>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:weightSum="2">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textSize="16sp"
                android:text="Desired Date : "
                android:textColor="@color/dark" />

            <TextView
                android:id="@+id/expiry_date_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/noraml_btn_height"
                android:layout_weight="1"
                android:padding="8dp"
                android:editable="false"
                android:cursorVisible="false"
                android:drawableRight="@drawable/ic_date"
                android:background="@drawable/black_line_border"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/dark">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/add_gift_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/button_style"
                android:textSize="16sp"
                android:text="SUBMIT"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>