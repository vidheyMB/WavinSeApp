<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dreamgifdetail"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hint_txt"
            android:layout_gravity="start|center"
            android:layout_margin="16dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="16dp"
            android:weightSum="2">

            <Button
                android:id="@+id/remove_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center"
                android:background="@drawable/bottomred_bg"
                android:text="Remove"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="64dp" />


            <Button
                android:id="@+id/redem_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center"
                android:layout_marginLeft="64dp"
                android:visibility="gone"
                android:background="@drawable/bottomred_bg"
                android:text="Redeem"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dreamGiftName_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="TextView" />

            <TextView
                android:id="@+id/dreamGiftType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="TextView" />

            <TextView
                android:id="@+id/pointsRequired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="TextView" />

            <TextView
                android:id="@+id/gift_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:visibility="gone"
                android:text="TextView" />
            <TextView
                android:id="@+id/gift_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:visibility="visible"
                android:text="TextView" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/primary_color"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/pointBalance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center"
                android:padding="@dimen/activity_vertical_small_margin"
                android:text=" XXX "
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/activity_vertical_small_margin"
                android:background="@drawable/image_round_shape_white"
                android:padding="@dimen/activity_vertical_small_margin"
                app:srcCompat="@drawable/balance" />

        </LinearLayout>
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:visibility="visible"
            android:background="@drawable/boarder_tablayout">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tablayout_header_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Average points to\n  be earned per month"
                    android:textAlignment="center"
                    android:textColor="@color/primary_dark_blue"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/avergaePointOne"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:text=""
                    android:background="@drawable/boarder_tablayout"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/avergaePointTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:padding="3dp"
                    android:background="@drawable/boarder_tablayout"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/avergaePointThree"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:padding="3dp"
                    android:gravity="center"
                    android:background="@drawable/boarder_tablayout"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:divider="@color/primary_color">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tablayout_header_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/primary_dark_blue"
                    android:text="Possible Dates \nto Redeem"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/PossibelDateOne"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boarder_tablayout"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/PossibelDateTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/boarder_tablayout"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/PossibelDateThree"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/boarder_tablayout"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="12sp" />

            </TableRow>

        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>