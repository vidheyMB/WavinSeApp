<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/voucher_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/promotion_cv"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        android:elevation="2dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/promo_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:scaleType="fitCenter"
                tools:srcCompat="@tools:sample/backgrounds/scenic[18]" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/promo_title"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:padding="12dp"
                    android:background="@drawable/tablayout_header_bgblue"
                    android:text="Locks closer\n upto 70% offer"
                    android:textColor="@android:color/white"
                    android:textAlignment="textStart"
                    android:gravity="top|start"/>

                <LinearLayout
                    android:id="@+id/promo_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:layout_weight="1"
                        android:drawableEnd="@drawable/ic_next"
                        android:gravity="end"
                        android:text="View more" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>