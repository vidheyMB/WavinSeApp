<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- My Dream Gift Details -->


    <LinearLayout
        android:id="@+id/details_page_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/point_requred_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/futura_book_font"
            android:text="xxxxxxxxx"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/futura_bold_font"
                android:text="xxx"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/futura_book_font"
                    android:text="Remove"
                    android:textColor="@color/red" />

            </LinearLayout>


        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/detils_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_background" />


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/product_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/futura_bold_font"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/futura_book_font"
            android:text="Wish Summary"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="#0054a6"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/avergaePointOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:fontFamily="@font/futura_book_font"
                android:gravity="start|center"
                android:padding="@dimen/activity_vertical_small_margin"
                android:text="Redeemable points as on today 26783 Points."
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/h3" />

            <ImageView
                android:layout_width="@dimen/profile_height"
                android:layout_height="@dimen/profile_height"
                android:layout_margin="@dimen/activity_vertical_small_margin"
                android:background="@drawable/image_round_shape_white"
                android:padding="@dimen/activity_vertical_small_margin"
                app:srcCompat="@drawable/balance" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="#ff4545"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/avergaePointTwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:fontFamily="@font/futura_book_font"
                android:gravity="start|center"
                android:padding="@dimen/activity_vertical_small_margin"
                android:text="Redeemable points as on today 26783 Points."
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/h3" />

            <TextView
                android:layout_width="@dimen/profile_height"
                android:layout_height="@dimen/profile_height"
                android:layout_margin="@dimen/activity_vertical_small_margin"
                android:background="@drawable/image_round_shape_white"
                android:gravity="center"
                android:padding="@dimen/activity_vertical_small_margin"
                android:text="6 Months"
                android:textColor="#ff4545" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="#fe9000"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/avergaePointThree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:fontFamily="@font/futura_book_font"
                android:gravity="start|center"
                android:padding="@dimen/activity_vertical_small_margin"
                android:text="Redeemable points as on today 26783 Points."
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/h3" />

            <TextView
                android:layout_width="@dimen/profile_height"
                android:layout_height="@dimen/profile_height"
                android:layout_margin="@dimen/activity_vertical_small_margin"
                android:background="@drawable/image_round_shape_white"
                android:gravity="center"
                android:padding="@dimen/activity_vertical_small_margin"
                android:text="12 Months"
                android:textColor="#fe9000"
                app:srcCompat="@drawable/balance" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/dream_gift_redeem"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/h4"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Redeem"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>

