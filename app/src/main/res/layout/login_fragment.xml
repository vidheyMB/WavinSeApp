<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_dark_blue"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/futura_bold_font"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/top_curve_white_bg"
            android:orientation="vertical"
            android:paddingStart="40dp"
            android:paddingTop="40dp"
            android:paddingEnd="40dp">



            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/h4"
                android:background="@drawable/button_bg"
                android:backgroundTint="@color/fade_white"
                android:fontFamily="@font/futura_book_font"
                android:hint="Enter your code / mobile number"
                android:paddingStart="@dimen/h5"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/primary_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/h4"
                android:background="@drawable/button_bg"
                android:backgroundTint="@color/fade_white"
                android:fontFamily="@font/futura_book_font"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:paddingStart="@dimen/h5"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/primary_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/forgot_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/h7"
                android:fontFamily="@font/futura_book_font"
                android:paddingStart="@dimen/h7"
                android:paddingTop="@dimen/h7"
                android:paddingBottom="@dimen/h7"
                android:text="Forgot password ?"
                android:textColor="@color/red"
                android:textSize="@dimen/h3" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/futura_bold_font"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/h3" />


        </LinearLayout>
    </LinearLayout>

</FrameLayout>