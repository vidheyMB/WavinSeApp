<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_address_scrollLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlurBlue"
    android:orientation="vertical"
    android:visibility="visible">

    <ScrollView
        android:id="@+id/edit_address_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:text="Name" />


                <EditText
                    android:id="@+id/saved_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_margin"
                    android:background="@drawable/white_back_rect_box"
                    android:digits="abcdefghijklmnopqrstuvwxyz"
                    android:inputType="text|textPersonName"
                    android:paddingLeft="@dimen/activity_vertical_margin"

                    android:textColor="@color/dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_small_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"

                    android:text="Mobile" />

                <EditText
                    android:id="@+id/saved_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_margin"
                    android:background="@drawable/white_back_rect_box"
                    android:digits="1234567890"
                    android:inputType="textPhonetic"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/activity_vertical_margin"

                    android:textColor="@color/dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_small_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:text="Email" />

                <EditText
                    android:id="@+id/saved_mail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_margin"
                    android:background="@drawable/white_back_rect_box"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/activity_vertical_margin"

                    android:textColor="@color/dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_small_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"

                    android:text="Address" />

                <EditText
                    android:id="@+id/saved_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_margin"
                    android:background="@drawable/white_back_rect_box"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="@dimen/activity_vertical_margin"

                    android:textColor="@color/dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_small_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"

                    android:text="Country" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_margin"
                    android:background="@drawable/white_back_rect_box"
                    android:clickable="false"
                    android:editable="false"
                    android:enabled="false"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:text="India"

                    android:textColor="@color/dark" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"

                    android:text="State" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_back_rect_box"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <Spinner
                        android:id="@+id/saved_state"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/big_margin"
                        android:layout_weight="10"
                        android:background="@color/transparent"
                        android:paddingLeft="@dimen/small_padding"
                        android:spinnerMode="dialog" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"

                    android:text="City" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_back_rect_box"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <Spinner
                        android:id="@+id/saved_city"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/big_margin"
                        android:layout_weight="10"
                        android:background="@color/transparent"
                        android:paddingLeft="@dimen/activity_vertical_small_margin"
                        android:spinnerMode="dialog" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_small_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:text="Zip" />

                <EditText
                    android:id="@+id/saved_zip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_margin"
                    android:background="@drawable/white_back_rect_box"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:textColor="@color/text_black" />
            </LinearLayout>

            <Button
                android:id="@+id/proceedBtn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_style"
                android:gravity="center"
                android:text="PROCEED"
                android:textAlignment="center"
                android:textColor="@color/light_white" />

        </LinearLayout>
    </ScrollView>
    <!--OTP SCREEN-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/submit_otp_host"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/noraml_btn_height"
            android:text="Sit back and relax! while we verify your mobile number"
            android:textAlignment="center"
            android:textSize="@dimen/h2"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(Enter the OTP below in case if we fail to detect the SMS automatically)"
            android:textAlignment="center"
            android:textSize="@dimen/h5"
            android:visibility="gone"

            />

        <EditText
            android:id="@+id/otp_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/big_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/white_back_rect_box"
            android:hint="OTP"
            android:inputType="number"
            android:maxLength="6"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:singleLine="true"
            android:textColor="@color/dark"
            android:textColorHint="#999" />

        <LinearLayout
            android:id="@+id/resend_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_small_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_refresh"
                app:tint="@color/primary_dark_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_padding"
                android:text="RESEND OTP"
                android:textColor="@color/primary_dark_blue" />
        </LinearLayout>

        <Button
            android:id="@+id/submit_redemption"
            android:layout_width="@dimen/big_image_height"
            android:layout_height="@dimen/noraml_btn_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/button_style"
            android:clickable="true"
            android:elevation="@dimen/small_padding"
            android:text="SUBMIT"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/timer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/list_item_height"
            android:text="00.00"
            android:textColor="@color/primary_dark_blue"
            android:textSize="@dimen/h3"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/success_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_color"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_height"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/result_image"
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:layout_gravity="center"
                android:background="@drawable/image_round_shape_white"
                android:padding="@dimen/mid_margin"
                app:srcCompat="@drawable/ic_check" />

            <TextView
                android:id="@+id/result_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_small_margin"
                android:text="Success !!"
                android:textColor="@color/colorAccent"
                android:textSize="38sp" />

            <TextView
                android:id="@+id/result_hints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/small_padding"
                android:layout_marginRight="@dimen/small_padding"
                android:gravity="center"
                android:text="Your product has been successfully placed !"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/result_misscall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/small_padding"
                android:layout_marginRight="@dimen/small_padding"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/h3" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>