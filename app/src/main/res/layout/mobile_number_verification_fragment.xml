<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".ui.mobile_no_verification.MobileNumberVerificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/h4"
        android:layout_gravity="center"
        android:gravity="center"

        android:paddingTop="@dimen/activity_vertical_small_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="OTP Verification"
            android:textSize="20sp"
            android:padding="4dp"
            android:textColor="@color/text_grey"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:padding="4dp"
            android:textColor="@color/text_grey"/>
        <EditText
            android:id="@+id/general_mobile2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/noraml_btn_height"
            android:padding="@dimen/small_padding"
            android:inputType="number"
            android:maxLength="10"
            android:nextFocusForward="@id/general_email"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textColor="@color/dark"
            android:background="@drawable/enroll_round_background"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/h4"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/futura_bold_font"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/h3" />
    </LinearLayout>
</FrameLayout>